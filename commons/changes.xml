<document xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/changes/1.0.0"
    xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/plugins/maven-changes-plugin/xsd/changes-1.0.0.xsd">
  <body>

    <release version="1.5.0" date="not released">
      <action type="update" dev="sseifert">
        Switch to AEM 6.5 as minimum version.
      </action>
    </release>

    <release version="1.4.4" date="2021-12-18">
      <action type="update" dev="sseifert" issue="WHAN-50"><![CDATA[
        Update to JDOM 2.0.6.1 (<a href="https://github.com/advisories/GHSA-2363-cqg2-863c">CVE-2021-33813</a>).
      ]]></action>
    </release>

    <release version="1.4.2" date="2021-01-23">
      <action type="update" dev="sseifert">
        Disable htx extension mapper by default - it's not longer best practice to use it.
      </action>
      <action type="fix" dev="sseifert">
        Make htx extension mapper compatbile with most recent AEM versions (directly map to cq:Page).
      </action>
    </release>

    <release version="1.4.0" date="2021-01-17">
      <action type="update" dev="sseifert">
        Switch to AEM 6.4 as minimum version.
      </action>
      <action type="update" dev="sseifert">
        Switch to individual OSGi artifacts with compile dependency instead of osgi.core and osgi.cmpn with provided dependency.
      </action>
    </release>

    <release version="1.3.0" date="2019-08-20">
      <action type="add" dev="sseifert">
        Add DOM markup for HTML image map and area.
      </action>
      <action type="fix" dev="sseifert" issue="WHAN-24">
        Eliminate stray 'source' element end tags.
      </action>
      <action type="remove" dev="sseifert">
        Remove component property resolver (superseded by same feature in WCM Commons).
      </action>
    </release>

    <release version="1.2.0" date="2019-03-15">
      <action type="add" dev="sseifert">
        Add DOM markup for HTML5 responsive images.
      </action>
      <action type="update" dev="sseifert">
        Deprecated component property resolver (now part of WCM Commons).
      </action>
    </release>

    <release version="1.1.0" date="2019-02-22">
      <action type="add" dev="sseifert">
        Add component property resolver.
      </action>
      <action type="update" dev="sseifert">
        Switch to AEM 6.2 as minimum version.
      </action>
    </release>

    <release version="1.0.0" date="2017-04-04">
      <action type="update" dev="sseifert">
        Switch to AEM 6.1 and Java 8 as minimum versions.
      </action>
    </release>

    <release version="0.5.4" date="2017-03-23">
      <action type="update" dev="sseifert">
        Update to JDOM 2.0.6.
      </action>
      <action type="update" dev="sseifert">
        Make dependencies to wcm.io Config provided.
      </action>
    </release>

    <release version="0.5.2" date="2016-01-20">
      <action type="update" dev="sseifert">
        Set AEM API and OSGi dependencies to provided scope.
      </action>
    </release>

    <release version="0.5.0" date="2014-11-05">
      <action type="add" dev="sseifert">
        Initial release.
      </action>
    </release>

    <release version="0.1.0" date="2014-10-02">
      <action type="add" dev="sseifert">
        Preliminary release.
      </action>
    </release>

  </body>
</document>
